    </div>

	<input type="hidden" id="room-id" value="<%=roomId%>" />
	<input type="hidden" id="pid" value="<%=pid%>" />
	<script src="/socket.io/socket.io.js"></script>
    <script src="/javascripts/playground.js"></script>
</body>

</html>